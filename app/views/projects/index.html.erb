  <body class="d-flex h-100 text-center text-dark bg-light">
    
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header class="mb-auto">
    <div>
      <h3 class="float-md-start mb-0">‚ùñ</h3>
      <nav class="nav nav-masthead justify-content-center float-md-end">
        <%= link_to "Home", root_path, class: "nav-link"%>
        <a class="nav-link" href="mailto:mousse_dental0h@icloud.com">Contact</a>
        <% if user_signed_in? %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        <% else %>
          <%= link_to "Log in", new_user_session_path, class: "nav-link"%>
        <% end %>
      </nav>
    </div>
  </header>

  <main class="px-3">
  <b><p id="notice"><mark><%= notice %></mark></p></b>

  <div class="container p-5 my-5">
    <p align="left" class="lead"><mark>Nik Delgado - Software Engineer</mark></p>
    <h2 align="left"> Hi, I&rsquo;m a Computer Science student at UCCS interested in solving problems in aerospace. üöÄ</h2>
    <br></br>
  </div>
  
  <div class="container p-5 my-5">
    <hr style="width:10%; height:5px; color:black; background-color:#212121">
    <h2 align="left"> Projects</h2>
    <br></br>
  
  <% @projects.each do |project| %>
    <div class="d-flex flex-wrap">
      <div class="col-6 my-auto" >
          <h4 align="left"><%= project.title %></h4>
          <p align="left"><%= project.description %></p>
          <%= link_to 'View', project, class: "btn btn-dark"%>
          <% if user_signed_in? %>
            <%= link_to 'Edit', edit_project_path(project), class: "btn btn-success"%>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%>
          <% end %>
      </div>
      <div class="col-6 p-5 my-5">
        <p> Image placeholder </p>
      </div>
    </div>
  <% end %>


<br>


<%= link_to 'Add New Project', new_project_path, class: "btn btn-dark" %>

